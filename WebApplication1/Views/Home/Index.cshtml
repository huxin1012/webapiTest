
@{
    ViewBag.Title = "Index";
}
<div>
    <h1>All Products</h1>
    <ul id="products" />
</div>
<div>
    <label for="prodId">ID:</label>
    <input type="text" id="prodId" size="5" />
    <input type="button" value="Search" onclick="find();" />
    <input type="button" value="Delete" onclick="del();" />
    <input type="button" value="Add" onclick="add();" />
    <p id="product" />
</div>
<div>
    <label for="prodName">Name</label><input type="text" id="prodName" /> <br />
    <label for="prodCategory">Category</label><input type="text" id="prodCategory" /> <br />
    <label for="prodPrice">Price</label><input type="text" id="prodPrice" /> <br />
    <input type="button" value="Add" id="action" onclick="action();" />
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            // Send an AJAX request
            // 发送AJAX请求
            showAll();
        });
        var isAdd = true;

        function add() {
            isAdd = true;
            $('#action').val("add");
            $('#prodName').val("");
            $('#prodCategory').val("");
            $('#prodPrice').val("");
        }

        function action() {
            if (isAdd) {
                addOne();
            }
            else {
                update();
            }
        }

        function addOne() {
            var prodName = $('#prodName').val();
            var prodCategory = $('#prodCategory').val();
            var prodPrice = $('#prodPrice').val();
            $.ajax({
                url: "api/products/",
                type: "post",      // 
                dataType: "json", // 返回的数据类型为json类型
                data: { Name: prodName, Category: prodCategory, Price: prodPrice },
                success: function (data) {
                    $('#product').html("添加成功！");
                    showAll();
                },
                error: function (data) {
                    $('#product').html("对不起，出错啦！");
                }
            });
        }
        function update() {
            var id = $('#prodId').val();
            var prodName = $('#prodName').val();
            var prodCategory = $('#prodCategory').val();
            var prodPrice = $('#prodPrice').val();
            $.ajax({
                url: "api/products/" + id,
                type: "put",      // 
                dataType: "json", // 返回的数据类型为json类型
                data: { Name: prodName, Category: prodCategory, Price: prodPrice },
                success: function (data) {
                    $('#product').html("更新成功！");
                    showAll();
                },
                error: function (data) {
                    $('#product').html("对不起，出错啦！");
                }
            });
        }

        function showAll() {
            $.getJSON("api/products/",
                function (data) {
                    $("#products li").remove();
                    // On success, 'data' contains a list of products.
                    // 成功时，'data'含有一组产品列表
                    $.each(data, function (key, val) {
                        // Format the text to display.
                        // 格式化文本，以便显示
                        var str = val.Name + ': $' + val.Price;
                        // Add a list item for the product.
                        // 添加一个产品列表项
                        $('<li/>', { text: str })
                            .appendTo($('#products'));
                    });
                });
        }

        function find() {
            var id = $('#prodId').val();
            $.getJSON("api/products/" + id,
                function (data) {
                    $('#prodName').val(data.Name);
                    $('#prodCategory').val(data.Category);
                    $('#prodPrice').val(data.Price);
                    isAdd = false;
                    $('#action').val("update");
                })
                .fail(
                function (jqXHR, textStatus, err) {
                    $('#product').text('Error: ' + err);
                });
        }

        function del() {
            var id = $('#prodId').val();
            $.ajax({
                url: "api/products/" + id,
                type: "delete",      // 
                dataType: "json", // 返回的数据类型为json类型
                success: function (data) {
                    $('#product').html("删除成功！");
                    showAll();
                },
                error: function (data) {
                    $('#product').html("对不起，出错啦！");
                }
            });
        }
</script>
    }

